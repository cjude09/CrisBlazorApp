@typeparam TItem

<div class="row">
    <div class="col-12">
        <hr />
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        @HeaderTemplate
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Items)
                    {
                        <tr>
                            @RowTemplate(item)
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment HeaderTemplate { get; set; }

    [Parameter]
    public RenderFragment<TItem> RowTemplate { get; set; }
    
    [Parameter]
    public IReadOnlyList<TItem> Items { get; set; }
}